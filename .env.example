# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,pyschool.ge

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pyland_db

# Redis
REDIS_URL=redis://localhost:6379/1
DISABLE_CACHE=false  # Set to true to disable Redis cache (will use dummy cache)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Sentry Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# CSRF Protection
CSRF_TRUSTED_ORIGINS=https://pyschool.ge,https://www.pyschool.ge

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Social Auth (GitHub)
SOCIAL_AUTH_GITHUB_KEY=your-github-client-id
SOCIAL_AUTH_GITHUB_SECRET=your-github-client-secret

# Social Auth (Google)
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-client-id
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-client-secret

# Rate Limiting (optional)
API_RATE_LIMIT_ANONYMOUS=100
API_RATE_LIMIT_AUTHENTICATED=1000

# Cache TTL (seconds, optional)
CACHE_TTL_ARTICLE_LIST=300
CACHE_TTL_ARTICLE_DETAIL=900
CACHE_TTL_CATEGORY_LIST=1800
CACHE_TTL_STATS=600

# Kubernetes Configuration (for deployment)
K8S_API_SERVER=72.56.105.54
K8S_NAMESPACE=pyland
DOCKER_IMAGE=ghcr.io/ps965xx7vn-lgtm/backend
DOCKER_TAG=production
KUBECONFIG=~/.kube/timeweb-config
